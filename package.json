{
  "name": "daipoints",
  "version": "1.0.0",
  "description": "Fuse DAIPoints & Pooltogether",
  "main": "",
  "scripts": {
    "test": "scripts/test.sh",
    "compile": "node_modules/.bin/truffle compile",
    "flatten": "scripts/flatten.sh",
    "abi": "scripts/abi.sh",
    "build": "npm run compile && npm run flatten && npm run abi",
    "deploy:mainnet": "node_modules/.bin/truffle migrate --reset --network mainnet",
    "deploy:ropsten": "node_modules/.bin/truffle migrate --reset --network ropsten",
    "deploy:fuse": "node_modules/.bin/truffle migrate --reset --network fuse",
    "deploy:testnet": "node_modules/.bin/truffle migrate --reset --network testnet",
    "deploy:local": "node_modules/.bin/truffle migrate --reset --network local"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fuseio/DAIPoints.git"
  },
  "author": "Lior Rabin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fuseio/DAIPoints/issues"
  },
  "homepage": "https://github.com/fuseio/DAIPoints#readme",
  "dependencies": {
    "@kleros/kleros": "DeltaCamp/kleros#ca7fbdcc195cfd1267efb99aae905c3400a5ea5f",
    "dotenv": "^8.2.0",
    "fixidity": "DeltaCamp/Fixidity#edf533f77df43b16a7b92f17af7a8930db01f293",
    "openzeppelin-solidity": "^2.3.0",
    "truffle-hdwallet-provider": "^1.0.17"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bn": "^0.2.0",
    "eth-gas-reporter": "^0.2.14",
    "ganache-cli": "^6.8.2",
    "node-jq": "^1.11.0",
    "truffle": "^5.0.24",
    "truffle-assertions": "^0.9.2",
    "truffle-flattener": "^1.4.2"
  }
}
